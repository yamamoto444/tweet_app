<div class="account_show">
    <p><img src="<%= "/user_images/#{@user.image_name}" %>" width="80" height="80"></p>
    <br>
    <p class="profile_column">name</p>
    <p><%= @user.name %></p>
    <p class="profile_column">Email</p>
    <p><%= @user.email %></p>
    <% if @user.id == @current_user.id %>
        <div class="btns">
            <p><%= link_to("Back","/posts/index",class:"back_btn") %></p>
            <p><%= link_to("Edit","/account/#{@current_user.id}/edit",class:"edit_btn") %></p>
            <p><%= link_to("Delete Account","/account/#{@current_user.id}/delete_confirm",class:"delete_btn") %></p>
        </div>
    <% end %>
    <div class="switch">
        <p>Posts</p>
        <p>|</p>
        <p><%= link_to("Likes","/account/#{@user.id}/likes") %></p>
    </div>
    <% @user.posts.each do |post| %>
        <div class="user_info">
            <p><img src="<%= "/user_images/#{post.user.image_name}" %>" width="20" height="20"></p>
            <p><%= link_to(post.user.name,"/account/#{post.user.id}/show",class:"name") %></p>
        </div>
        <%= link_to(post.content,"/posts/#{post.id}",class:"index_post") %>
        <hr class="posts_line">
    <% end %>
</div>